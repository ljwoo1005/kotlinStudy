<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 토스트 메세지 출력용 버튼 -->
    <Button
        android:id="@+id/toastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="토스트 메세지"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 다이얼로그 표출용 버튼 -->
    <Button
        android:id="@+id/dialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다이얼로그"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toastButton"/>

    <!-- 알림창 표출용 버튼 -->
    <Button
        android:id="@+id/alertButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림창01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogButton"/>
    <Button
        android:id="@+id/alertButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림창02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertButton01"/>


</androidx.constraintlayout.widget.ConstraintLayout>