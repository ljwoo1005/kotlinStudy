<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--
    https://velog.io/@723poil/Android-Studio-9%EC%9E%A5-%ED%99%94%EB%A9%B4-%ED%9A%8C%EC%A0%84%EC%97%90-%EB%8C%80%EC%9D%91%ED%95%98%EA%B8%B0
    블로그 보고 ppt 정리
    -->

    <TextView
        android:id="@+id/text01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="@string/land01"/>
    <TextView
        android:id="@+id/text02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text01"
        android:background="@color/red"
        android:textColor="@color/green"
        android:text="@string/land02"/>
    <TextView
        android:id="@+id/screenSize"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text02"
        android:background="@color/green"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>